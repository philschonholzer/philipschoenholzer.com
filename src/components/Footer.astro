<style lang="scss">
  footer {
    padding: 1em 0;
    background: var(--backgroundLight);
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: baseline;
  }

  .social-section {
    font-size: 1.9em;
    padding: 1em 0 2em;
    margin: 0 auto;
    color: var(--textDark);
    max-width: fit-content;

    @media (min-width: 640px) {
      font-size: 2.5em;
    }
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 1em;

    a {
      color: var(--textDark);
    }

    svg {
      height: 1.5em;
      fill: currentColor;
    }
  }

  .calendly-button {
    font-size: 0.8em;
    display: block;
    padding: 0.5em 1.5em;
    border: 2px solid var(--primaryLight);
    border-radius: 4px;
    color: var(--text);
    background: transparent;
  }
</style>
