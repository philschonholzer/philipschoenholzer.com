---
import { Icon } from 'astro-icon'
---

<footer>
  <div class="container">
    <section class="social-section">
      <div class="social-links">
        <a href="https://twitter.com/pschonholzer" aria-label="My Twitter page">
          <Icon name="ph:twitter-logo-bold" />
        </a>
        <a
          href="https://www.linkedin.com/in/philip-schoenholzer/"
          aria-label="My LinkedIn page"
        >
          <Icon name="ph:linkedin-logo-bold" />
        </a>
        <a
          href="https://join.skype.com/invite/bBtv050ZE58m"
          aria-label="My Skype name"
        >
          <Icon name="mdi:skype-business" />
        </a>
        <a
          href="https://www.reddit.com/user/phischer_h"
          aria-label="My Reddit profile"
        >
          <Icon name="ph:reddit-logo-bold" />
        </a>
        <a
          href="http://live.xbox.com/Profile?Gamertag=CookieJus"
          aria-label="My Xbox gamer tag"
        >
          <Icon name="ri:xbox-line" />
        </a>
        <a
          href="https://www.instagram.com/phil_sch/"
          aria-label="My Instagram page"
        >
          <Icon name="ph:instagram-logo-bold" />
        </a>
        <a
          href="https://www.facebook.com/philip.schoenholzer"
          aria-label="My Facebook page"
        >
          <Icon name="ph:facebook-logo-bold" />
        </a>
      </div>
    </section>
    <div class="row">
      <p>© 1978 - {new Date().getFullYear()}, Philip Schönholzer</p>
      <!-- Calendly link widget begin -->
      <link
        href="https://assets.calendly.com/assets/external/widget.css"
        rel="stylesheet"
      />
      <script
        src="https://assets.calendly.com/assets/external/widget.js"
        type="text/javascript"
        async></script>
      <script is:inline>
        function popup() {
          Calendly.initPopupWidget({
            url: 'https://calendly.com/philip-schoenholzer/30min',
          })
        }
      </script>

      <a class="calendly-button" href="" onclick="popup();return false;"
        >Termin mit mir vereinbaren</a
      >
      <!-- Calendly link widget end -->
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    padding: 1em 0;
    background: var(--backgroundLight);
  }
  .row {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: baseline;
  }

  .social-section {
    font-size: 1.9em;
    padding: 1em 0 2em;
    margin: 0 auto;
    color: var(--textDark);
    max-width: fit-content;

    @media (min-width: 640px) {
      font-size: 2.5em;
    }
  }

  .social-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 1em;

    a {
      color: var(--textDark);
    }

    svg {
      height: 1.5em;
      fill: currentColor;
    }
  }

  .calendly-button {
    font-size: 0.8em;
    display: block;
    padding: 0.5em 1.5em;
    border: 2px solid var(--primaryLight);
    border-radius: 4px;
    color: var(--text);
    background: transparent;
  }
</style>
