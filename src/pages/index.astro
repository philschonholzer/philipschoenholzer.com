<style lang="scss">
  .hero {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    margin: 4rem 0;
    gap: 1em;

    h1 {
      font-size: 2em;
      line-height: 1.15;
      margin: 0 auto 0 0;
      padding: 1em 0 0;
      color: var(--primaryLight);

      @media (min-width: 640px) {
        font-size: 3em;
      }
    }

    p, ul {
      font-style: italic;
      color: var(--textDark);
    }

    img {
      margin-left: auto;
      margin-right: auto;
    }

  }

  .avatar {
    height: 150px;
    width: 150px;
    border: 5px solid hsl(262, 0%, 28%);
    border-radius: 50%;
  }

  .copy-section {
    font-size: 1.2em;
    padding-top: 0;
    padding-bottom: 3em;

    @media (min-width: 640px) {
      font-size: 1.6em;
    }
  }

  .contact-section {
    font-size: 1.0em;
    padding-bottom: 8em;

    @media (min-width: 640px) {
      font-size: 1.5em;
    }
  }

  .contact-links {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    font-weight: bold;
    color: var(--primaryLight);
    text-align: center;
    padding: 0 3em;
    gap: 3em;

    a {
      color: inherit;
      text-decoration: underline;
    }

    & > * {
      display: flex;
      flex-direction: column;
      justify-content: space-between;
      flex: 1 1 0%;
      gap: 1em;

      svg {
        height: 3em;
        display: block;
        margin: auto;
        fill: currentColor;
      }
    }
  }
</style>
